{
  "compilerOptions": {
    /* === core target / libs === */
    "target": "es2022",
    "lib": ["dom", "dom.iterable", "esnext"],

    /* === module / resolution === */
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true,

    /* === path alias === */
    "baseUrl": ".",
    "paths": { "@/*": ["./*"] },

    /* === type-system helpers === */
    // "types": ["node"],
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,

    /* === JS / JSX === */
    "jsx": "preserve",
    "allowJs": true,

    /* === interop === */
    "esModuleInterop": true,
    "isolatedModules": true,
    "plugins": [{ "name": "next" }]
  },

  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}